<div class="messages">
  <% @messages.each do |message| %>
    <div class="message">
      <div class="sidebar">
        <%= image_tag message.user.avatar, class: 'avatar' %>
      </div>
      <div>
        <div class="screen-name"><%= message.user.screen_name %></div>
        <div class="content"><%= message.content %></div>
      </div>
    </div>
  <% end %>
</div>